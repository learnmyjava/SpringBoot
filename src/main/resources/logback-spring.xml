<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
  	<property name="LOG_HOME" value="${APP_LOG_BASE}/springboot" />
  	 
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%thread] %X{SystemTraceId} %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
      	</encoder>
    </appender>        
    <appender name="DEFAULT_INFO_FILE"  class="ch.qos.logback.core.rolling.RollingFileAppender">  <!-- 滚动记录文件 --> 
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名  按照每小时生生成文件-->
            <FileNamePattern>${LOG_HOME}/springboot.log.%d{yyyy-MM-dd-HH}.%i.log</FileNamePattern>
            <MaxHistory>90</MaxHistory><!-- 保存近90个小时的文件 -->
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>100MB</maxFileSize><!-- 文件大小100M, 超出使用i 索引 默认 0 -->
			</timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>   
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
    </appender>    
    <!-- 打印错误日志 -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
      	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        	<pattern>%d{HH:mm:ss.SSS} [%thread] %X{SystemTraceId} %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
    </appender>
    
   <!--  <logger name="java.sql.Connection">
		<level value="DEBUG" />
	</logger> -->
	<!-- <logger name="java.sql.Statement">
		<level value="DEBUG" />
 	</logger> -->
 	<logger name="java.sql.PreparedStatement">
		<level value="INFO" />
 	</logger>
 	<!-- <logger name="com.ibatis">
 		<level value="DEBUG" />
 	</logger> -->

    <root>
        <level value="INFO" />
        <appender-ref ref="STDOUT" />
        <appender-ref ref="DEFAULT_INFO_FILE" />
    </root>
</configuration>